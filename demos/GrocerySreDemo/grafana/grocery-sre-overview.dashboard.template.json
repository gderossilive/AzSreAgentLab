{
  "dashboard": {
    "title": "Grocery App - SRE Overview (Custom)",
    "tags": ["grocery-sre-demo", "custom"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 0,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "type": "custom",
          "name": "app",
          "label": "App",
          "query": "grocery-api",
          "current": { "text": "grocery-api", "value": "grocery-api", "selected": true },
          "hide": 0
        }
      ]
    },
    "panels": [
      {
        "type": "text",
        "title": "About",
        "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
        "options": {
          "mode": "markdown",
          "content": "This is a custom dashboard for the AzSreAgentLab Grocery SRE Demo.\n\nIt expects a Loki datasource named **Loki (grocery)**. If you haven't set it up yet, run: `demos/GrocerySreDemo/scripts/07-create-custom-grafana-dashboard.sh`.\n\nTip: trigger the rate limit scenario via `scripts/03-smoke-and-trigger.sh` and watch error spikes and `429`s here."
        }
      },
      {
        "type": "stat",
        "title": "Errors (last 15m)",
        "gridPos": { "h": 5, "w": 6, "x": 0, "y": 4 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(count_over_time({app=\"$app\", level=\"error\"}[15m]))"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 },
                { "color": "red", "value": 10 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "type": "stat",
        "title": "Requests/sec (API)",
        "gridPos": { "h": 5, "w": 6, "x": 6, "y": 4 },
        "targets": [
          {
            "appInsights": {
              "dimension": [],
              "metricName": "select",
              "timeGrain": "auto"
            },
            "azureLogAnalytics": {
              "query": "//change this example to create your own time series query\n<table name>                                        \n                      //the table to query (e.g. Usage, Heartbeat, Perf)\n| where $__timeFilter(TimeGenerated)                                      //this is a macro used to show the full chart’s time range, choose the datetime column here\n| summarize count() by <group by column>, bin(TimeGenerated, $__interval) //change \u201cgroup by column\u201d to a column in your table, such as \u201cComputer\u201d. The $__interval macro is used to auto-select the time grain. Can also use 1h, 5m etc.\n| order by TimeGenerated asc",
              "resultFormat": "time_series",
              "workspace": "00000000-0000-0000-0000-000000000000"
            },
            "azureMonitor": {
              "aggOptions": ["Total"],
              "aggregation": "Total",
              "alias": "Requests/sec",
              "dimensionFilter": "*",
              "dimensionFilters": [],
              "dimensions": [],
              "metricDefinition": "Microsoft.App/containerApps",
              "metricName": "Requests",
              "metricNamespace": "Microsoft.App/containerApps",
              "resourceGroup": "__RESOURCE_GROUP__",
              "resourceName": "__API_CONTAINERAPP_NAME__",
              "timeGrain": "PT1M",
              "timeGrains": [
                { "text": "auto", "value": "auto" },
                { "text": "1 minute", "value": "PT1M" },
                { "text": "5 minutes", "value": "PT5M" },
                { "text": "15 minutes", "value": "PT15M" },
                { "text": "30 minutes", "value": "PT30M" },
                { "text": "1 hour", "value": "PT1H" }
              ]
            },
            "datasource": {
              "type": "grafana-azure-monitor-datasource",
              "uid": "__AZMON_UID__"
            },
            "queryType": "Azure Monitor",
            "refId": "A",
            "hide": true,
            "subscription": "__SUBSCRIPTION_ID__"
          },
          {
            "datasource": { "type": "__expr__", "uid": "__expr__" },
            "type": "math",
            "expression": "$A / 60",
            "refId": "B"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      },
      {
        "type": "stat",
        "title": "CPU utilization (API)",
        "gridPos": { "h": 5, "w": 6, "x": 12, "y": 4 },
        "targets": [
          {
            "appInsights": {
              "dimension": [],
              "metricName": "select",
              "timeGrain": "auto"
            },
            "azureLogAnalytics": {
              "query": "//change this example to create your own time series query\n<table name>                                        \n                      //the table to query (e.g. Usage, Heartbeat, Perf)\n| where $__timeFilter(TimeGenerated)                                      //this is a macro used to show the full chart’s time range, choose the datetime column here\n| summarize count() by <group by column>, bin(TimeGenerated, $__interval) //change \u201cgroup by column\u201d to a column in your table, such as \u201cComputer\u201d. The $__interval macro is used to auto-select the time grain. Can also use 1h, 5m etc.\n| order by TimeGenerated asc",
              "resultFormat": "time_series",
              "workspace": "00000000-0000-0000-0000-000000000000"
            },
            "azureMonitor": {
              "aggOptions": ["Average", "Minimum", "Maximum"],
              "aggregation": "Average",
              "alias": "CPU%",
              "dimensionFilter": "*",
              "dimensionFilters": [],
              "dimensions": [],
              "metricDefinition": "Microsoft.App/containerApps",
              "metricName": "CpuPercentage",
              "metricNamespace": "Microsoft.App/containerApps",
              "resourceGroup": "__RESOURCE_GROUP__",
              "resourceName": "__API_CONTAINERAPP_NAME__",
              "timeGrain": "auto",
              "timeGrains": [
                { "text": "auto", "value": "auto" },
                { "text": "1 minute", "value": "PT1M" },
                { "text": "5 minutes", "value": "PT5M" },
                { "text": "15 minutes", "value": "PT15M" },
                { "text": "30 minutes", "value": "PT30M" },
                { "text": "1 hour", "value": "PT1H" }
              ]
            },
            "datasource": {
              "type": "grafana-azure-monitor-datasource",
              "uid": "__AZMON_UID__"
            },
            "queryType": "Azure Monitor",
            "refId": "A",
            "subscription": "__SUBSCRIPTION_ID__"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          },
          "overrides": []
        }
      },
      {
        "type": "timeseries",
        "title": "Error rate (errors/s)",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 9 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate({app=\"$app\", level=\"error\"}[$__interval]))"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": { "defaults": {}, "overrides": [] }
      },
      {
        "type": "timeseries",
        "title": "Requests/sec (API)",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 9 },
        "targets": [
          {
            "appInsights": {
              "dimension": [],
              "metricName": "select",
              "timeGrain": "auto"
            },
            "azureLogAnalytics": {
              "query": "//change this example to create your own time series query\n<table name>                                        \n                      //the table to query (e.g. Usage, Heartbeat, Perf)\n| where $__timeFilter(TimeGenerated)                                      //this is a macro used to show the full chart’s time range, choose the datetime column here\n| summarize count() by <group by column>, bin(TimeGenerated, $__interval) //change \u201cgroup by column\u201d to a column in your table, such as \u201cComputer\u201d. The $__interval macro is used to auto-select the time grain. Can also use 1h, 5m etc.\n| order by TimeGenerated asc",
              "resultFormat": "time_series",
              "workspace": "00000000-0000-0000-0000-000000000000"
            },
            "azureMonitor": {
              "aggOptions": ["Total"],
              "aggregation": "Total",
              "alias": "Requests/sec",
              "dimensionFilter": "*",
              "dimensionFilters": [],
              "dimensions": [],
              "metricDefinition": "Microsoft.App/containerApps",
              "metricName": "Requests",
              "metricNamespace": "Microsoft.App/containerApps",
              "resourceGroup": "__RESOURCE_GROUP__",
              "resourceName": "__API_CONTAINERAPP_NAME__",
              "timeGrain": "PT1M",
              "timeGrains": [
                { "text": "auto", "value": "auto" },
                { "text": "1 minute", "value": "PT1M" },
                { "text": "5 minutes", "value": "PT5M" },
                { "text": "15 minutes", "value": "PT15M" },
                { "text": "30 minutes", "value": "PT30M" },
                { "text": "1 hour", "value": "PT1H" }
              ]
            },
            "datasource": {
              "type": "grafana-azure-monitor-datasource",
              "uid": "__AZMON_UID__"
            },
            "queryType": "Azure Monitor",
            "refId": "A",
            "hide": true,
            "subscription": "__SUBSCRIPTION_ID__"
          },
          {
            "datasource": { "type": "__expr__", "uid": "__expr__" },
            "type": "math",
            "expression": "$A / 60",
            "refId": "B"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": { "defaults": {}, "overrides": [] }
      },
      {
        "type": "timeseries",
        "title": "Rate limit events (429s)",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 18 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(count_over_time({app=\"$app\"} |= \"429\" [$__interval]))"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": { "defaults": {}, "overrides": [] }
      },
      {
        "type": "timeseries",
        "title": "Warnings + errors (events/s)",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 18 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate({app=\"$app\", level=~\"warn|error\"}[$__interval]))"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": { "defaults": {}, "overrides": [] }
      },
      {
        "type": "table",
        "title": "Errors by errorCode (count)",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 27 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "sum by (errorCode) (count_over_time({app=\"$app\"} | json | errorCode!=\"\" [$__interval]))"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{ "displayName": "Value", "desc": true }]
        },
        "fieldConfig": { "defaults": {}, "overrides": [] }
      },
      {
        "type": "logs",
        "title": "Recent errors (formatted)",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 27 },
        "datasource": { "type": "loki", "uid": "__LOKI_UID__" },
        "targets": [
          {
            "refId": "A",
            "expr": "{app=\"$app\", level=\"error\"} | json | line_format \"{{.statusCode}} {{.errorCode}} {{.event}} - {{.message}}\""
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true
        }
      }
    ]
  },
  "overwrite": true,
  "message": "Create/update Grocery SRE custom dashboard"
}
