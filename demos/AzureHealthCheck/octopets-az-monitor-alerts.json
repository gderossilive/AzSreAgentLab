{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "5897918718529648380"
    }
  },
  "parameters": {
    "subscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Azure subscription ID where resources are deployed"
      }
    },
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource group name containing the Octopets Container Apps"
      }
    },
    "backendAppName": {
      "type": "string",
      "defaultValue": "octopetsapi",
      "metadata": {
        "description": "Name of the backend Container App"
      }
    },
    "frontendAppName": {
      "type": "string",
      "defaultValue": "octopetsfe",
      "metadata": {
        "description": "Name of the frontend Container App"
      }
    },
    "actionGroupResourceId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Optional Action Group resource ID to notify (leave empty for no notifications)."
      }
    },
    "evaluationFrequency": {
      "type": "string",
      "defaultValue": "PT1M",
      "metadata": {
        "description": "Alert evaluation frequency (ISO 8601 duration)."
      }
    },
    "windowSize": {
      "type": "string",
      "defaultValue": "PT5M",
      "metadata": {
        "description": "Alert window size (ISO 8601 duration)."
      }
    },
    "cpuUsageNanoCoresThreshold": {
      "type": "int",
      "defaultValue": 350000000,
      "metadata": {
        "description": "CPU threshold in NanoCores (0.5 core = 500,000,000; 70% = 350,000,000)."
      }
    },
    "backendResponseTimeMsThreshold": {
      "type": "int",
      "defaultValue": 700,
      "metadata": {
        "description": "Backend average response time threshold in milliseconds."
      }
    },
    "frontendResponseTimeMsThreshold": {
      "type": "int",
      "defaultValue": 400,
      "metadata": {
        "description": "Frontend average response time threshold in milliseconds."
      }
    },
    "http5xxRequestsThreshold": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "5xx requests threshold over the alert window."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Environment": "Lab",
        "Purpose": "Octopets-Metric-Alerts",
        "ManagedBy": "Bicep"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  },
  "variables": {
    "metricNamespace": "Microsoft.App/containerApps",
    "backendAppResourceId": "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.App/containerApps/{2}', parameters('subscriptionId'), parameters('resourceGroupName'), parameters('backendAppName'))]",
    "frontendAppResourceId": "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.App/containerApps/{2}', parameters('subscriptionId'), parameters('resourceGroupName'), parameters('frontendAppName'))]",
    "actionsArray": "[if(empty(parameters('actionGroupResourceId')), createArray(), createArray(createObject('actionGroupId', parameters('actionGroupResourceId'))))]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "High CPU Usage - Octopets API",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets API CPU usage exceeds threshold for the window.",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[variables('backendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "CpuHigh",
              "metricName": "UsageNanoCores",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('cpuUsageNanoCoresThreshold')]",
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "High Response Time - Octopets API",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets API average response time exceeds threshold for the window.",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[variables('backendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "ResponseTimeHigh",
              "metricName": "ResponseTime",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('backendResponseTimeMsThreshold')]",
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "HTTP 5xx - Octopets API",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets API returns too many 5xx responses in the window.",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[variables('backendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Http5xx",
              "metricName": "Requests",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('http5xxRequestsThreshold')]",
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion",
              "dimensions": [
                {
                  "name": "statusCodeCategory",
                  "operator": "Include",
                  "values": [
                    "5xx"
                  ]
                }
              ]
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "High CPU Usage - Octopets FE",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets FE CPU usage exceeds threshold for the window.",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[variables('frontendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "CpuHigh",
              "metricName": "UsageNanoCores",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('cpuUsageNanoCoresThreshold')]",
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "High Response Time - Octopets FE",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets FE average response time exceeds threshold for the window.",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[variables('frontendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "ResponseTimeHigh",
              "metricName": "ResponseTime",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('frontendResponseTimeMsThreshold')]",
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "HTTP 5xx - Octopets FE",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Triggers when Octopets FE returns too many 5xx responses in the window.",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[variables('frontendAppResourceId')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Http5xx",
              "metricName": "Requests",
              "metricNamespace": "[variables('metricNamespace')]",
              "operator": "GreaterThan",
              "threshold": "[parameters('http5xxRequestsThreshold')]",
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion",
              "dimensions": [
                {
                  "name": "statusCodeCategory",
                  "operator": "Include",
                  "values": [
                    "5xx"
                  ]
                }
              ]
            }
          ]
        },
        "autoMitigate": true,
        "actions": "[variables('actionsArray')]"
      }
    }
  ],
  "outputs": {
    "alertRuleNames": {
      "type": "array",
      "value": [
        "High CPU Usage - Octopets API",
        "High Response Time - Octopets API",
        "HTTP 5xx - Octopets API",
        "High CPU Usage - Octopets FE",
        "High Response Time - Octopets FE",
        "HTTP 5xx - Octopets FE"
      ]
    }
  }
}