# Copy to .env and fill in values
# Azure context
AZURE_TENANT_ID=<AZURE_TENANT_ID>
AZURE_SUBSCRIPTION_ID=<AZURE_SUBSCRIPTION_ID>
AZURE_LOCATION=swedencentral

# Proactive Reliability Demo (App Service slot swap)
# Used by demos/ProactiveReliabilityAppService/scripts/01-setup-demo.sh
PROACTIVE_DEMO_RG_NAME=rg-sre-proactive-demo
# Optional: set to a globally-unique App Service name; if blank, the setup script will generate one
PROACTIVE_DEMO_APP_SERVICE_NAME=

# Octopets (deployed via scripts/30-deploy-octopets.sh)
OCTOPETS_ENV_NAME=octopets-lab
# Auto-populated by scripts/30-deploy-octopets.sh
OCTOPETS_RG_NAME=<OCTOPETS_RESOURCE_GROUP_NAME>

# Optional outputs captured after scripts/31-deploy-octopets-containers.sh
OCTOPETS_API_URL=<OCTOPETS_API_URL>
OCTOPETS_FE_URL=<OCTOPETS_FE_URL>

# SRE Agent
SRE_AGENT_RG_NAME=rg-sre-agent-lab
SRE_AGENT_NAME=sre-agent-lab
SRE_AGENT_ACCESS_LEVEL=High

# Scope restriction: ONLY the Octopets RG
SRE_AGENT_TARGET_RESOURCE_GROUPS=<OCTOPETS_RESOURCE_GROUP_NAME>
# Optional (only needed for cross-subscription targeting)
SRE_AGENT_TARGET_SUBSCRIPTIONS=

# Optional: use an existing user-assigned managed identity; blank means create one
SRE_AGENT_EXISTING_MANAGED_IDENTITY_ID=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ServiceNow Integration (for Incident Automation Demo)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ServiceNow Developer Instance Configuration
# Sign up at: https://developer.servicenow.com/dev.do
SERVICENOW_INSTANCE=<YOUR_INSTANCE_PREFIX>  # e.g., dev12345 (without .service-now.com)
SERVICENOW_USERNAME=<YOUR_SERVICENOW_USERNAME>  # Usually "admin" for developer instances
SERVICENOW_PASSWORD=<YOUR_SERVICENOW_PASSWORD>  # Your ServiceNow admin password

# ServiceNow Webhook URL (auto-populated after deploying alert rules)
SERVICENOW_WEBHOOK_URL=<AUTO_POPULATED_AFTER_ALERT_DEPLOYMENT>

# Email Notification Configuration
INCIDENT_NOTIFICATION_EMAIL=<YOUR_EMAIL_ADDRESS>  # Email for SRE Agent notifications

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Microsoft Teams Integration (for Health Check Demo)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Teams Incoming Webhook URL
# Create in Teams: Channel → ... → Connectors → Incoming Webhook
TEAMS_WEBHOOK_URL=<YOUR_TEAMS_WEBHOOK_URL>  # e.g., https://outlook.office.com/webhook/...
